<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">
    <RelativeLayout
        android:id="@+id/layout_primary"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/primarybar_height">

        <TextView
            android:text="通知"
            android:textColor="@color/black"
            android:id="@+id/tv_primarybar"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/ll_search"
        android:clickable="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/serch_line"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:singleLine="true"
                android:hint="搜索"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_add"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/em_friends_new_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="添加好友"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_invite"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView

            android:src="@mipmap/em_friends_chat_room"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="好友邀请"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:clickable="true"
        android:id="@+id/ll_group"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@mipmap/em_friends_group_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:text="群聊"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            android:textSize="13sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>